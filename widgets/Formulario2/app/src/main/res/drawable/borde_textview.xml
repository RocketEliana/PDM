<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Sombra (opcional, ligera) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#33000000"/> <!-- sombra negra con transparencia -->
            <corners android:radius="12dp"/>
        </shape>
    </item>

    <!-- Fondo principal -->
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- color de fondo -->
            <stroke
                android:width="2dp"
                android:color="#FF6200EE"/> <!-- color del borde -->
            <corners android:radius="12dp"/>
        </shape>
    </item>

</layer-list>
